<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hys.trazar.mapper.TestMapper">
	
  <select id="selectTest" resultType="com.hys.trazar.domain.ReviewDto">
  	SELECT n.id        id, 
  	       n.content   content, 
  	       n.inserted  inserted 
  	FROM Review n GROUP BY n.id
  	ORDER BY id DESC
  </select>
  
  <select id="getTest" resultType="com.hys.trazar.domain.ReviewDto">
  	SELECT id, content, inserted
  	FROM Review
  	WHERE id = #{id}
  </select>
  
  <update id="updateTest">
  	UPDATE Review
  	SET content = #{content}
  	WHERE id = #{id}
  </update>
  
  <delete id="deleteTest">
  	DELETE FROM Review
  	WHERE id = #{id}
  </delete>
  
  <insert id="insertTest" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
  	INSERT INTO Review (content)
  	VALUES (#{content})
  </insert>
	
</mapper>